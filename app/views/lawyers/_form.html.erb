<div class="background-new-notice big ">
  <div class="bg-gradient-new-notice big">
    <div class="form-group margin-top">
      <div class="container-lg margin-top">
        <div class="row margin-big-form">
          <div class="col-sm-6 col-sm-offset-3">
            <div class="background-white-new-notice big ">
      <br/>


<p><b>I18n.locale:</b>
<%= I18n.locale %>
</p>
      <%= simple_form_for @lawyer do |f| %>
      <%= f.input :first_name, label: t(:first_name) %>
      <%= f.input :last_name, label: t(:last_name)%>
       <%= f.input :status, label: t(:status)%>
       <%= f.input :bar, label: t(:bar)%>
       <%= f.input :presentation, label: t(:presentation)%>
      <%= f.input :competences, collection: [ :labour, :corporate, :commercial, :real_estate, :taxes, :compliance, :litigation ], label: t(:competences), :include_blank => '' %>
      <%= f.input :competences_2, collection: [ :labour, :corporate, :commercial, :real_estate, :taxes, :compliance, :litigation ], label: t(:competences_2), :include_blank => '' %>
      <%= f.input :competences_3, collection: [ :labour, :corporate, :commercial, :real_estate, :taxes, :compliance, :litigation ], label: t(:competences_3), :include_blank => '' %>
      <%= f.input :competences_details, label: t(:fields_details), prompt: "Détaillez les compétences" %>
      <%= f.input :languages, label: t(:spoken) %>
      <%= f.input :course, as: :text, label: t(:course) %>
      <%= f.input :picture, label: t(:photo)%>
      <%= f.input :picture_cache, as: :hidden %>
      <%= f.input :address, label: t(:address)%>
      <%= f.input :phone, label: t(:phone) %>
      <%= f.input :mail, label: t(:email) %>
      <%= f.input :vCard, label: "vCard" %>
      <%= f.input :pdf, label: "PDF" %>


      <%= f.button :submit, class: "btn btn-success" %>
      <% if @lawyer.errors.any? %>
          <div class="errors-container">
            <ul>
              <% @lawyer.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
    <% end %>


            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
